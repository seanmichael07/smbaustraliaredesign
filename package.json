{
    "name": "realenhance",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "cssnano": "^5.0.15",
        "dotenv": "^11.0.0",
        "firebase": "^9.6.2",
        "moment": "^2.29.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.6",
        "react-redux-firebase": "^3.11.0",
        "react-router-dom": "^6.2.1",
        "react-scripts": "^5.0.0",
        "react-uuid": "^1.0.2",
        "redux": "^4.1.2",
        "redux-firestore": "^0.15.0",
        "redux-thunk": "^2.4.1",
        "web-vitals": "^2.1.3",
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "tailwindcss": "^3.0.12",
        "autoprefixer": "^10.4.2"
    },
    "scripts": {
        "build:css": "NODE_ENV=production postcss src/css/tailwind.src.css -o src/css/styles.css",
        "watch:css": "postcss src/css/tailwind.src.css -o src/css/styles.css -w",
        "start": "yarn run concurrently \"yarn watch:css\" \"yarn start:js\"",
        "build": "yarn run build:css && yarn run build:js",
        "start:js": "react-scripts start",
        "build:js": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.5",
        "concurrently": "^7.0.0",
        "eslint": "^8.6.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-compat": "^4.0.1",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-only-var": "^0.1.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-underscore-to-lodash": "^0.0.2",
        "glob-all": "^3.2.1",
        "husky": "^7.0.4",
        "install-peers": "^1.0.3",
        "lint-staged": "^12.1.7",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.5.1",
        "purgecss-webpack-plugin": "^4.1.3",
        "rxjs-compat": "^6.6.7",
        "stylelint": "^14.2.0",
        "stylelint-config-standard": "^24.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.jsx": "eslint --fix",
        "src/css/**/*.{css,scss}": "stylelint --fix"
    }
}
